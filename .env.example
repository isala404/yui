# Database (for local development with forge dev)
DATABASE_URL=postgres://postgres:forge@localhost:5432/yui

# Server
HOST=0.0.0.0
PORT=8080

# Logging (error, warn, info, debug, trace)
RUST_LOG=info,forge_runtime::function::executor=trace

# Postgres container settings
POSTGRES_USER=postgres
POSTGRES_PASSWORD=forge
POSTGRES_DB=yui

# Optional: JWT secret for authentication
# FORGE_SECRET=your-secret-key-here

# OpenRouter
# OPENROUTER_API_KEY=sk-or-v1-...
# OPENROUTER_MODEL=moonshotai/kimi-k2.5
# OPENROUTER_PROVIDER_ONLY=fireworks

# Optional deterministic local scenario mode (manual suite verification)
# YUI_RUNTIME_BACKEND=mock
# YUI_TRIAGE_FORCE_FALLBACK=true
# YUI_REPLY_SKIP_LLM=true
# YUI_DELIVERY_FAKE_SEND=true
